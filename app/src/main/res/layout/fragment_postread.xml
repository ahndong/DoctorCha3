<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@android:color/white">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <!--카카오톡 전용 공유-->
        <ImageView
            android:id="@+id/iv_share_kakaotalk"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="6dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_kakaotalk_nooutline_48_48"/>

        <!--fcm 전송-->
        <ImageView
            android:id="@+id/iv_send_fcm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_share_kakaotalk"
            android:src="@drawable/ic_notifications_active_black_32dp"/>

        <!--해당 블로그 홈으로 가기 : 개인멤버 미지원-->
        <TextView
            android:id="@+id/tv_go"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:text="GO"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_toStartOf="@+id/tv_modi"
            android:background="@drawable/x_circle_bottommenu"/>

        <TextView
            android:id="@+id/tv_modi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:text="수정"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_toStartOf="@+id/tv_repl"
            android:background="@drawable/x_circle_bottommenu"
            android:visibility="gone"/>

        <!--댓글보기/댓글달기-->
        <TextView
            android:id="@+id/tv_repl"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="댓글"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_alignParentEnd="true"
            android:background="@drawable/x_circle_bottommenu"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:background="@drawable/x_circle_percent"/>
    </FrameLayout>
</FrameLayout>
